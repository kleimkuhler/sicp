      (let ((new-pair (mlist item '() '())))
        (cond ((empty-deque?)
               (set! front-ptr new-pair)
               (set! rear-ptr new-pair))
              (else
               (set-mcdr! (mcdr new-pair) front-ptr)
               (set-mcar! (mcdr front-ptr) new-pair)
               (set! front-ptr new-pair)))
        front-ptr))
    (define (rear-insert-deque! item)
      (let ((new-pair (mlist item '() '())))
